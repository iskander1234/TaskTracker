@model TaskTracker.ViewModels.ViewModel

@{
    ViewData["Title"]= "Edit";
    Layout = "_Layout";
}

<h2>Fill out the form for editing</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" asp-controller="Tasks" method="post">
            @{
                Html.RenderPartial("PartialView/PartialView");
                @Html.Hidden("Task.Id", @Model.Task.Id)
            }
            <button type="submit">Confirm</button>
        </form>
    </div>
</div>